class Library:
    def __init__(self,title):
        self.bookid=''
        self.book=title
        self.author=''
        self.status=''
    def printauthor(self,author):
        #self.author=author
        with open('book.csv','r') as authread:
            auth=csv.DictReader(authread)
            for a in auth:
                if a['Author']==author:
                    print(a['Author'])
                    print(a['Bookid'],'\t',a['Book name'],'\t',a['Status'])
                    break
                else:
                    print('Books of the author not in resourses. Sorry')
